cap_cam.set(3, 750)
cap_cam.set(4, 500)
while True:
    succes, img = cap_cam.read()
    cv2.imshow('Result', img[:, ::-1]) #зеркальный вид видео
    #cv2.imshow('Result', img)   # стандартный вид видео

    if cv2.waitKey(1) & 0xFF == ord('q'):
        break
