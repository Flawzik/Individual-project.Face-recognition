import cv2

cap_cam = cv2.VideoCapture(0)
#face_cascade_db = cv2.CascadeClassifier(cv2.data.haarcascades+"haarcascade_frontalface_default.xml")
#cap_cam_gray = cv2.cvtColor(cap_cam, cv2.COLOR_BGR2GRAY)
